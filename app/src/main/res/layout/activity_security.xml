<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profilePurple">

    <LinearLayout
        android:id="@+id/headerSecurity"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_header_rounded"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:text="Security"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_launcher_round"
        android:background="@drawable/bg_avatar_circle"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerSecurity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCheckIn"
        style="@style/ProfileTealButton"
        android:text="Manage Check-in Time"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Manage Password -->
    <Button
        android:id="@+id/btnPassword"
        style="@style/ProfileTealButton"
        android:text="Manage Password"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCheckIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnDeleteAccount"
        style="@style/ProfileTealButton"
        android:text="Delete Account"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnTips"
        style="@style/ProfileTealButton"
        android:text="Safety Tips"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:text="Back"
        android:background="@drawable/bg_primary_button"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"/>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/include_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
