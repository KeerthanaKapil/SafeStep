<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shelters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9086A6"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3B8C4"
        android:gravity="center"
        android:padding="12dp"
        android:text="Support / Helpline"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:backgroundTint="#E3B8C4"
        android:layout_marginTop="8dp" />

    <!-- Main Buttons -->
    <LinearLayout
        android:id="@+id/supportButtons"
        android:layout_below="@id/headerTitle"
        android:layout_above="@id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="80dp">

        <Button
            android:id="@+id/btnShelters"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Shelters"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#7EB3C9"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/btnFood"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#7EB3C9"
            android:layout_marginBottom="16dp"
             />

        <Button
            android:id="@+id/btnHealth"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Health Services"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#7EB3C9"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Emergency Services"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#7EB3C9"
            android:layout_marginBottom="16dp"
          />

        <Button
            android:id="@+id/btnMental"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Mental Health Crisis"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#7EB3C9"
             />
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#E3B8C4"
        android:padding="8dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:contentDescription="Profile" />

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/navCall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:contentDescription="Call" />
    </LinearLayout>

</RelativeLayout>
