<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8A8C9">

    <!-- TOP HEADER -->
    <LinearLayout
        android:id="@+id/headerContacts"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_contacts_header"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvContactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- RECYCLERVIEW â€“ THIS SHOWS ALL CONTACT CARDS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerContacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerContacts"
        app:layout_constraintBottom_toTopOf="@id/contactButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTTOM BUTTONS (ADD / DELETE / EDIT) -->
    <LinearLayout
        android:id="@+id/contactButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnAddContact"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:text="Add"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_contact_button"
            android:layout_marginRight="12dp"/>

        <Button
            android:id="@+id/btnDeleteContact"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:text="Delete"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_contact_button"
            android:layout_marginRight="12dp"/>

        <Button
            android:id="@+id/btnEditContact"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_contact_button"/>
    </LinearLayout>

    <!-- BOTTOM NAV -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/include_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
